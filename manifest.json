{
    "manifest_version": 2,

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",
    "default_locale": "en",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html",
        "default_title": "__MSG_popup_default_title__"
    },

    "icons": {
        "16": "images/icon16.png"
    },

    "background": {
        "scripts": ["js/keycode.js", "js/background.js","js/commands.js"],
        "persistent": true
    },

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "<all_urls>",
        "file:///*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "options_page": "options.html",
    "content_scripts": [{
        "matches": ["<all_urls>","file:///*"],
        "match_about_blank":true,
        "js": ["js/keycode.js", "js/keyeventmonitor.js"],
        "run_at":"document_start"
    }],
    "commands":{
        "toggle_recent_tab":{
            "suggested_key":{
                "default":"Alt+Tab"
            },
            "description":"Toggle Recent Tabs"
        },
        "back_to_oldest":{
            "suggested_key":{
                "default":"Alt+Shift+Left"
            },
            "description":"Go back to oldest history in current tab"
        },
        "forward_to_latest":{
            "suggested_key":{
                "default":"Alt+Shift+Right"
            },
            "description":"Go forward to latest history in current tab"
        },
        "jump_to_home":{
            "suggested_key":{
                "default":"Alt+Shift+Space"
            },
            "description":"Jump to home page of current url"
        }
    }
}
