{
  "manifest_version": 2,

  "name": "Shurl",
  "description": "This extension help you quickly launch url by keyboard shotcuts",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Go to website use shortcut"
  },

  "icons":{
      "16":"images/icon16.png"
  },

  "background":{
    "scripts":["js/background.js"],
    "persistent":true
  },

  "permissions":[
    "contextMenus"
  ],
  "homepage_url":"http://www.geowind.cn",
  "options_ui":{
      "page":"options.html",
      "chrome_style":false
  },
  "content_scripts":[{
      "matches":["<all_urls>"],
      "js":["js/keyeventmonitor.js"]
    }]
}
